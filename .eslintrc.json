{
  "extends": ["next"],
  "settings": {
    "next": {
      "rootDir": "."
    }
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "off",
    "no-unused-vars": "warn",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "@next/next/no-html-link-for-pages": "off",
    "react/no-unescaped-entities": "off"
  },
  "ignorePatterns": [
    "node_modules/*",
    ".next/*",
    "out/*"
  ]
}
